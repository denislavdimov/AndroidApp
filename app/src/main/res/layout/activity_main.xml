<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/incomeText"
        android:layout_width="83dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:text="Income"
        android:textColor="#000000"
        android:textColorLink="#0400FF"
        android:textSize="21dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.030" />

    <TextView
        android:id="@+id/expensesText"
        android:layout_width="96dp"
        android:layout_height="30dp"
        android:layout_marginLeft="48dp"
        android:text="Expenses"
        android:textColor="#000000"
        android:textColorLink="#0400FF"
        android:textSize="21dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.030" />

    <TextView
        android:id="@+id/totalText"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginRight="40dp"
        android:text="Total"
        android:textColor="#000000"
        android:textColorLink="#0400FF"
        android:textSize="21dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.030" />

    <EditText
        android:id="@+id/readonly_Income"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:text="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incomeText" />

    <EditText
        android:id="@+id/readonly_Expenses"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:text="10"
        app:layout_constraintLeft_toLeftOf="@id/readonly_Income"
        app:layout_constraintStart_toEndOf="@id/readonly_Income"
        app:layout_constraintTop_toBottomOf="@id/expensesText" />

    <EditText
        android:id="@+id/readonly_Total"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:inputType="text"
        android:text="10"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/readonly_Expenses"
        app:layout_constraintTop_toBottomOf="@id/totalText" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="490dp"
        android:contentDescription="AddIcon"
        android:src="@drawable/plusicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>